name1 = input("\nEnter the first name: ").lower()
name2 = input("Enter the second name: ").lower()

for char in name1:
    if char in name2:
        name1 = name1.replace(char, "", 1)
        name2 = name2.replace(char, "", 1)

remaining_count = len(name1) + len(name2)

flames = ["F", "L", "A", "M", "E", "S"]

while len(flames) > 1:
    index = (remaining_count % len(flames)) - 1
    if index >= 0:
        flames = flames[index + 1:] + flames[:index]
    else:
        flames = flames[:len(flames) - 1]

relationship = flames[0]
relationships = {
    "F": "Friends ğŸ«‚",
    "L": "Love ğŸ§¡",
    "A": "Affection ğŸ¥¹",
    "M": "Marriage ğŸŒâ™¥ï¸ğŸ«µğŸ»",
    "E": "Enemies ğŸ˜¡",
    "S": "Siblings ğŸ‘«"
}

print("\nâœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨âœ¨")
for i in range(1, 6):
    print(" " * (5 - i) + symbol * i + " " * 30 + symbol * i)

print("     ğŸ’– Relationship Status:", relationships[relationship])

